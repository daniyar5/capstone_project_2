<%- include('partials/header.ejs'); -%>

<div class="title-search">
    <div class="title-page">
        <p>Books I've read</p>
    </div>

    <form class="search-book" action="/search" method="post">
        <input type="text" name="searchInput" placeholder="Add new book..." autocomplete="off" autofocus="true" />
        <button type="submit" name="search-btn"><svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0 0 50 50">
            <path d="M 21 3 C 11.601563 3 4 10.601563 4 20 C 4 29.398438 11.601563 37 21 37 C 24.355469 37 27.460938 36.015625 30.09375 34.34375 L 42.375 46.625 L 46.625 42.375 L 34.5 30.28125 C 36.679688 27.421875 38 23.878906 38 20 C 38 10.601563 30.398438 3 21 3 Z M 21 7 C 28.199219 7 34 12.800781 34 20 C 34 27.199219 28.199219 33 21 33 C 13.800781 33 8 27.199219 8 20 C 8 12.800781 13.800781 7 21 7 Z"></path>
            </svg></button>
    </form>

    <hr style="height: 1px;width:55%; background-color: black; margin-top: 30px;">
    
</div>


<div class="box">
    <% for (let book of books){ %>
        <div class="book">
            <img src="<%= book.cover %>" alt="">
            <div class="right-side">
                <div class="linked-blocks">

                    <div class="book-heading">
                        <p><%= book.title %> by <%= book.author %></p>
                    </div>
                    <div class="date-rating">

                        <div class="date">
                            <p>Date of read:  <%= new Date(book.date_read).toLocaleDateString('en-CA') %></p>
                        </div>

                        <div class="rating">
                            <p>My rating: <%= book.rating %> / 10</p>
                        </div>
                    </div>
                </div>

                <div class="descript">
                    <p><%= book.description %></p>
                </div>

                <div class="btns">
                    <a class="note-btn" href="/book/<%= book.id %>">Read my notes</a>
                    <a class="note-btn" href="/edit/<%= book.id %>">Edit notes</a>
                </div>

            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer.ejs'); -%>